<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Sinatra App</title>
    <meta name="author" content="Marshall Mickelson ( http://mickelson.org )">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" type="image/png"  href="favicon.ico" >
    <script src="js/jquery-1.8.0.min.js"></script>
  </head>
  <body>
    <div id="pagewrap">

      <header id="header">
        <hgroup>
          <h1 id="site-logo">Sinatra App</h1>
          <h2 id="site-description">Site Description</h2>
        </hgroup>

        <nav role="main">
          <ul id="main-nav">
            <li><a href="#">Home</a></li>
          </ul>
        </nav>

        <form id="searchform">
          <input type="search">
        </form>
      </header>

      <div id="content">

        <article class="post">
          <%= yield %>
        </article>

      </div>

      <aside id="sidebar">

        <section class="widget">
          widget
        </section>

      </aside>

      <footer id="footer">
        footer
      </footer>

    </div>

    <!-- scripts concatenated and minified via build script-->
    <script src="js/app.js"></script>
    <!-- end scripts-->

  </body>
</html>


